    <body>
        <h1> creer un langage.</h1>
        {% for flash_message in app.session.flashBag.get('success') %}
            <div class="alert alert-success animated flash" role="alert"> {{ flash_message }}</div>
        {% endfor %}
        {% for flash_message in app.session.flashBag.get('success') %}
            <div class="alert alert-danger animated flash" role="alert"> {{ flash_message }}</div>
        {% endfor %}
        {{ form_start(form) }}
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom) }}
            {{ form_errors(form.nom) }}

            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
            {{ form_errors(form.description) }}
            
            {{ form_label(form.temporary_image) }}
            {{ form_widget(form.temporary_image) }}
            {{ form_errors(form.temporary_image) }}

            <button type="submit">Register!</button>
        {{ form_end(form) }}
        
        <h2>Langage d√©ja disponible:</h2>
        {%for langage in langages %}
            <strong>{{langage.nom}}</strong> <img src='{{asset(langage.image)}}' height="3%" width="3%" /> <br /> <blockquote> {{langage.description}} </blockquote> <br />
        {% endfor %}  
        
      <!--Import jQuery before materialize.js-->
      <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
